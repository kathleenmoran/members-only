<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %> 
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <%= image_tag "incognito.svg", height: 40 %>
          MembersOnly
        </a>

        <% if user_signed_in?%>
          <%= button_to(
            "Log Out",
            destroy_user_session_path,
            method: :delete,
            type: "button",
            class: "d-flex btn btn-secondary"
          ) %>
        <% else %>
            <%= button_to(
              "Log in", new_user_session_path,
              type: "button",
              class: "d-flex btn btn-secondary"
            ) %>
        <% end %>
      </div>
    </nav>
    <div class="alert-container">
      <% if notice %>
        <p class="alert alert-success m-2"><%= notice.capitalize %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger m-2"><%= alert.capitalize %></p>
      <% end %>
      <% if devise_controller? && resource.errors.any? %>
        <p class="alert alert-danger m-2"><%= resource.errors.full_messages.join(', ').capitalize %>.</p>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
